{
    "name": "AliKhaleghi/CI4-Rooms",
    "description": "Flexible Chat Room system for CodeIgniter 4.",
    "license": "MIT",
    "type": "library",
    "keywords": [
        "codeigniter",
        "communication",
        "chat"
    ],
    "authors": [
        {
            "name": "Ali Khaleghi",
            "email": "awli.khaleghi@gmail.com",
            "role": "Developer"
        }
    ],
    "homepage": "https://github.com/AliKhaleghi/CI4-Rooms",
    "require": {
        "php": "^7.4 || ^8.0"
    },
    "require-dev": {
        "codeigniter4/codeigniter4-standard": "^1.0",
        "codeigniter4/devkit": "^1.0",
        "codeigniter4/framework": "^4.1",
        "mockery/mockery": "^1.0"
    },
    "provide": {
      
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Khaleghi\\Chat\\": "src"
        },
        "exclude-from-classmap": [
            "**/Database/Migrations/**"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Support\\": "tests/_support"
        }
    },
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    }
}
